@{
    ViewData["Title"] = "Create";
}
@model CourseCreateInput

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurs Ekle</h5>

                <form asp-controller="Courses" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label"></label>
                        <select asp-for="CategoryId" asp-items="@ViewBag.categoryList" class="form-control">
                            <option value="">Kategori seçiniz.</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Feature.Duration" class="form-label"></label>
                        <input asp-for="Feature.Duration" class="form-control" />
                        <span asp-validation-for="Feature.Duration" class="text-danger"></span>
                    </div>

                    @* Resim input gelecek. *@

                    <button type="submit" class="btn btn-primary">Kurs Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

